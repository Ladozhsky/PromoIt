@page "/Campaigns"
@inject HttpClient Http

Page created for Campaigns

<ul class="list-unstyled">
	@foreach (var campaign in Campaigns)
	{
		<li class="media my-3">
			<div class="media-img-wrapper mr-2">
				<a href="#">
					<img class="media-img" src="@campaign.ImageUrl" alt="@campaign.CapmpaignName" />
				</a>
			</div>
			<div class="media-body">
				<a href="#">
					<h4 class="mb-0">@campaign.CapmpaignName</h4>
				</a>
				<p>@campaign.Description</p>
				<h5 class="hashtag">@campaign.Hashtag</h5>
				</div>
		</li>
	}
</ul>

@code {
	private static List<Campaign> Campaigns = new List<Campaign>();

	protected override async Task OnInitializedAsync()
	{
		var result = await Http.GetFromJsonAsync<List<Campaign>>("https://localhost:7069/api/Campaign");
		if(result != null)
			Campaigns = result;
	}
}
